<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center"
        android:background="#F5F5F5">

        <!-- Profile Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="👤 User Profile"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:layout_marginBottom="30dp"
            android:gravity="center" />

        <!-- Profile Picture Placeholder -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@android:drawable/ic_menu_myplaces"
            android:background="@android:drawable/button_onoff_indicator_off"
            android:contentDescription="Profile Picture"
            android:layout_marginBottom="25dp"
            android:scaleType="centerInside" />

        <!-- Profile Information -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📋 Profile Information"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="20dp" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:padding="15dp"
            android:layout_marginBottom="25dp">

            <!-- Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:textStyle="bold"
                    android:textColor="#424242" />

                <TextView
                    android:id="@+id/tvProfileName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="G.Vignesh"
                    android:textColor="#333333" />

            </LinearLayout>

            <!-- Email -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Email:"
                    android:textStyle="bold"
                    android:textColor="#424242" />

                <TextView
                    android:id="@+id/tvProfileEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="g.vignesh@example.com"
                    android:textColor="#333333" />

            </LinearLayout>

            <!-- Phone -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Phone:"
                    android:textStyle="bold"
                    android:textColor="#424242" />

                <TextView
                    android:id="@+id/tvProfilePhone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="+1 (555) 123-4567"
                    android:textColor="#333333" />

            </LinearLayout>

        </LinearLayout>

        <!-- Interactive Elements -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⚙️ Settings & Actions"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="20dp" />

        <EditText
            android:id="@+id/etNewName"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:hint="Enter new name"
            android:inputType="textPersonName"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnEditName"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:text="✏️ Edit Name"
            android:textSize="14sp"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnSaveProfile"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:text="💾 Save Changes"
            android:textSize="14sp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnToggleTheme"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:text="🌙 Dark Theme"
            android:textSize="14sp"
            android:backgroundTint="#9C27B0"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="20dp" />

        <!-- Additional Info -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="💡 Tip: Use the navigation buttons above to switch between Budget and Profile views!"
            android:textSize="12sp"
            android:textColor="#666666"
            android:textStyle="italic"
            android:gravity="center"
            android:layout_marginTop="20dp" />

    </LinearLayout>
</ScrollView>