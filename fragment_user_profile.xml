<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center"
        android:background="#F5F5F5">

        <!-- Profile Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="👤 User Profile"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:layout_marginBottom="25dp"
            android:gravity="center" />

        <!-- Profile Picture Placeholder -->
        <View
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="20dp" />

        <!-- User Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="25dp"
            android:background="@android:color/white"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📋 Personal Information"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="15dp" />

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="G. Vignesh"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2E7D32"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvUserEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="g.vignesh@example.com"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvUserPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 9876543210"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvUserAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22 years old"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvUserLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chennai, India"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvJoinDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Member since January 2025"
                android:textSize="12sp"
                android:textColor="#777777" />

        </LinearLayout>

        <!-- Preferences Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="25dp"
            android:background="@android:color/white"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚙️ Preferences"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/tvPreferences"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Budget Tracking, Savings Goals, Expense Analysis, Financial Reports"
                android:textSize="14sp"
                android:textColor="#555555"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

        <!-- Edit Profile Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✏️ Edit Profile"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="15dp" />

        <EditText
            android:id="@+id/etEditName"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:hint="✏️ Enter new name"
            android:inputType="textPersonName"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/etEditLocation"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:hint="📍 Enter new location"
            android:inputType="text"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginBottom="15dp" />

        <!-- Action Buttons -->
        <Button
            android:id="@+id/btnEditProfile"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:text="✏️ Update Profile"
            android:textSize="14sp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/btnUpdatePreferences"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:text="⚙️ Update Preferences"
            android:textSize="14sp"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/btnShowStats"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:text="📊 View Statistics"
            android:textSize="14sp"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/btnResetProfile"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:text="🔄 Reset Profile"
            android:textSize="14sp"
            android:backgroundTint="#F44336"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="20dp" />

    </LinearLayout>
</ScrollView>