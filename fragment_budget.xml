<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center"
        android:background="#F5F5F5">

        <!-- User Greeting -->
        <TextView
            android:id="@+id/tvUserGreeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome, G.Vignesh! 👋"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:layout_marginBottom="25dp"
            android:gravity="center" />

        <!-- Data Summary -->
        <TextView
            android:id="@+id/tvDataSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📊 Dataset Information"
            android:textSize="14sp"
            android:textColor="#424242"
            android:layout_marginBottom="25dp"
            android:gravity="center" />

        <!-- Search Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🔍 Search User"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="15dp" />

        <EditText
            android:id="@+id/etSearchName"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:hint="🔍 Enter name (Alice, Bob, Carol, David, Eva, Frank)"
            android:inputType="textPersonName"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnSearchUser"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:text="🔍 Search User"
            android:textSize="14sp"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="25dp" />

        <!-- Analysis Buttons -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📊 Budget Analysis"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="15dp" />

        <Button
            android:id="@+id/btnTotalSavings"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:text="💰 Total Savings"
            android:textSize="14sp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/btnAverageIncome"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:text="💼 Average Income"
            android:textSize="14sp"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/btnBestSaver"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:text="🏆 Best Saver"
            android:textSize="14sp"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/btnWorstExpenses"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:text="⚠️ Highest Spender"
            android:textSize="14sp"
            android:backgroundTint="#F44336"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/btnGoalAchievers"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:text="🎯 Goal Achievers"
            android:textSize="14sp"
            android:backgroundTint="#9C27B0"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="20dp" />

    </LinearLayout>
</ScrollView>